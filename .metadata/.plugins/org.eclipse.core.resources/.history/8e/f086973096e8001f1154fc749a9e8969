package com.ioc;

import org.springframework.beans.factory.DisposableBean;
import org.springframework.beans.factory.InitializingBean;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.stereotype.Component;

import lombok.Data;
import lombok.NoArgsConstructor;

@Component
@Data
@NoArgsConstructor
public class EmployeeImplementsLifeCycle implements InitializingBean,DisposableBean {
	
	int id;
	
	//constructor injection
//	@Autowired
//	public EmployeeImplementsLifeCycle(@Value("3") int id) {
//		this.id = id;
//	}
	
	public int getId() {
		return id;
	}

	//setter injection
	
//	@Autowired
//	public void setId(@Value("2") int id) {
//		this.id = id;
//	}
	
	@Autowired
	public void fieldData(@Value("4") int id)
	{
		this.id=id;
	}
	
	
	@Override
	public void afterPropertiesSet() throws Exception {
		System.out.println("EmployeeImplementsLifeCycle.afterPropertiesSet() - Start");
	}

	@Override
	public void destroy() throws Exception {
		System.out.println("EmployeeImplementsLifeCycle.destroy() - Destroy");
		
	}
	
	@Override
	public String toString() {
		return "Test [id=" + id +"]";
	}

	
	

}
